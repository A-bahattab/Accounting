<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Base application theme. -->
  <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColor">#323232</item>
  </style>

  <style name="AppTheme" parent="Base.AppTheme">
    <item name="android:windowTranslucentStatus">true</item>
  </style>

  <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:textColorPrimary">#323232</item>
    <item name="android:windowBackground">@null</item>
  </style>
  <style name="ToolbarPopupTheme" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:windowBackground">@null</item>
  </style>
  <style name="AddOrEditTheme" parent="AppTheme">
    <item name="android:windowBackground">@null</item>
  </style>
  <style name="SummaryTheme" parent="AppTheme">
    <item name="android:windowBackground">@android:color/white</item>
  </style>
</resources>