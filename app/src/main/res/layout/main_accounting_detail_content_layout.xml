<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_accounting_detail_header_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:minHeight="60dp"
    >
  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_main_accounting_detail_content_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="@+id/tv_main_accounting_detail_content_tag_name"
      tools:text="8:07"
      />
  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_main_accounting_detail_content_tag_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      app:layout_constraintBottom_toTopOf="@+id/tv_main_accounting_detail_content_remarks"
      app:layout_constraintLeft_toRightOf="@+id/tv_main_accounting_detail_content_time"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_chainStyle="packed"
      tools:text="出行"
      />
  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_main_accounting_detail_content_remarks"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:ellipsize="end"
      android:maxLines="1"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="@+id/tv_main_accounting_detail_content_tag_name"
      app:layout_constraintTop_toBottomOf="@+id/tv_main_accounting_detail_content_tag_name"
      tools:text="好惨啊"
      />
  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_main_accounting_detail_content_amount"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@+id/tv_main_accounting_detail_content_time"
      tools:text="¥100"
      />
</androidx.constraintlayout.widget.ConstraintLayout>