<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main_accounting_detail_header_parent"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:minHeight="60dp"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:background="#ffffff"
  >
  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/tv_main_accounting_detail_content_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="@+id/tv_main_accounting_detail_content_tag_name"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginStart="16dp"
    tools:text="8:07"
    />
  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/tv_main_accounting_detail_content_tag_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toRightOf="@+id/tv_main_accounting_detail_content_time"
    app:layout_constraintBottom_toTopOf="@+id/tv_main_accounting_detail_content_remarks"
    app:layout_constraintVertical_chainStyle="packed"
    android:layout_marginStart="16dp"
    tools:text="出行"
    />
  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/tv_main_accounting_detail_content_remarks"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/tv_main_accounting_detail_content_tag_name"
    app:layout_constraintLeft_toLeftOf="@+id/tv_main_accounting_detail_content_tag_name"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginTop="5dp"
    android:maxLines="1"
    android:ellipsize="end"
    tools:text="好惨啊"
    />
  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/tv_main_accounting_detail_content_amount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@+id/tv_main_accounting_detail_content_time"
    android:layout_marginEnd="16dp"
    tools:text="¥100"
    />
</android.support.constraint.ConstraintLayout>